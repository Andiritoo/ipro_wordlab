@using Domain
@if (AllHints is not null)
{
    <FluentStack Orientation="Orientation.Vertical" HorizontalAlignment="HorizontalAlignment.Center">
        <FluentStack Orientation="Orientation.Horizontal" HorizontalAlignment="HorizontalAlignment.Center">
            <KeyboardHint Letter="Q" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'Q')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="W" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'W')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="E" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'E')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="R" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'R')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="T" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'T')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="Z" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'Z')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="U" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'U')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="I" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'I')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="O" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'O')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="P" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'P')" OnLetterClicked="@OnLetterClicked" />
        </FluentStack>

        <FluentStack Orientation="Orientation.Horizontal" HorizontalAlignment="HorizontalAlignment.Center">
            <KeyboardHint Letter="A" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'A')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="S" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'S')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="D" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'D')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="F" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'F')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="G" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'G')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="H" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'H')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="J" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'J')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="K" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'K')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="L" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'L')" OnLetterClicked="@OnLetterClicked" />
        </FluentStack>

        <FluentStack Orientation="Orientation.Horizontal" HorizontalAlignment="HorizontalAlignment.Center">
            <KeyboardHint Letter="Enter" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == null)" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="Y" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'Y')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="X" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'X')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="C" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'C')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="V" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'V')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="B" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'B')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="N" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'N')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="M" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == 'M')" OnLetterClicked="@OnLetterClicked" />
            <KeyboardHint Letter="Backspace" LetterHint="@OrderedHints.FirstOrDefault(x => x.Letter == null)" OnLetterClicked="@OnLetterClicked" />
        </FluentStack>

    </FluentStack>
}

@code {
    [Parameter]
    public List<LetterHint> AllHints { get; set; }

    public IEnumerable<LetterHint> OrderedHints => AllHints.OrderByDescending(x => x.HintType);

    [Parameter]
    public EventCallback<string> OnLetterClicked { get; set; }
}